<%= atf(:p, :name) do %>
  <strong>Name:</strong>
  <%= @team.name %>
<% end %>

<%= atf(:p, :competition) do %>
  <strong>Competition:</strong>
  <%= @team.competition %>
<% end %>

<%= atf(:p, :point) do %>
